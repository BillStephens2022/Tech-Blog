<div class="col-lg-4">
  <a href="/post/{{id}}" class="post-links">
    <section class="card mb-3">
        <h2 class="card-title">{{post_title}}</h2>
        <h5 class="card-content">{{post_content}}</h5>
        <h4 class="card-author">Posted by: {{user.username}} on {{format_date date_created}}</h4>
    </section>
  </a>
</div>

